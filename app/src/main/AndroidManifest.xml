<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="foodscout">

<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.INTERNET" />

<application
    android:hardwareAccelerated="false"
    android:allowBackup="true"
    android:icon="@mipmap/appicon"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/appicon_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.DeliverNow">
    <activity
        android:name="co.za.foodscout.activities.order.CartViewActivity"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:exported="true"
        android:label="Your Cart" />
    <activity
        android:name="co.za.foodscout.activities.retail.RetailsActivity"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:exported="true"
        android:label="choose restaurant" />
    <activity
        android:name="co.za.foodscout.activities.user.UserOrderViewActivity"
        android:exported="true"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:label="View your Order" />
    <activity
        android:name="co.za.foodscout.activities.delivery.DeliveriesActivity"
        android:exported="true"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:label="Deliveries Pending" />
    <activity
        android:name="co.za.foodscout.activities.account.AccountActivity"
        android:exported="true"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:label="Account Details" />
    <activity
        android:name="co.za.foodscout.activities.account.ResetPasswordActivity"
        android:label="@string/Login"
        android:exported="true" />
    <activity
        android:name="co.za.foodscout.activities.delivery.DeliveryDetailsActivity"
        android:exported="true"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:label="Delivery Details" />
    <activity
        android:name="co.za.foodscout.activities.DrawerActivity"
        android:exported="true"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.menu.MenuActivity"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:label="Menu" />

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="@string/google_maps_key" />

    <activity
        android:name="co.za.foodscout.activities.MapActivity"
        android:label="Choose delivery Location"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.account.LoginActivity"
        android:theme="@style/Theme.DeliverNow.NoActionBar"
        android:label="@string/Login" />
    <activity
        android:name="co.za.foodscout.activities.account.RegisterActivity"
        android:label="@string/title_activity_register"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.SettingsActivity"
        android:label="@string/settings"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.seller.SellerViewActivity"
        android:exported="true"
        android:label="Orders"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.menu.MenuDetailActivity"
        android:exported="true"
        android:label="Menu"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.retail.registerRestaurant"
        android:exported="true"
        android:label="Register new Restaurant"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.order.CheckOutActivity"
        android:exported="true"
        android:label="Checkout"
        android:theme="@style/Theme.DeliverNow.NoActionBar" />
    <activity
        android:name="co.za.foodscout.activities.seller.SellerDetailsActivity"
        android:exported="true"
        android:theme="@style/Theme.DeliverNow.NoActionBar"/>
    <activity
        android:name="co.za.foodscout.activities.MainActivity"
        android:theme="@style/Theme.DeliverNow.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
</application>
</manifest>
