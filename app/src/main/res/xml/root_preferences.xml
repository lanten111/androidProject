<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General Setting">

        <EditTextPreference
            app:key="version"
            app:title="Version"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="@string/help"
            app:title="Help"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:title="Terms and Conditions"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>